{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "tricore-elf-gdb.exe",
            "miDebuggerServerAddress": "localhost:2345",
            "preLaunchTask": "Launch QEMU",
            "postDebugTask": "Terminate QEMU",
            // Use the following gdb command to list the available target architectures:
            //
            //      set architecture
            //
            // The target architecture for TriCore V1.6.2 is specified below but does not work with the
            // current version of cppdbg (as of December 2025).
            //
            //      "targetArchitecture": "TriCore:V1_6_2",
            //
            // As a workaround, the target architecture is set using the "setupCommands" below.
            "setupCommands": [
                {
                    "description": "Set the target architecture to TriCore V1.6.2",
                    "text": "set architecture TriCore:V1_6_2",
                    "ignoreFailures": false
                },
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}
